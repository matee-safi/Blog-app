<div>
    <div class='btn-container'><%= link_to "Back to User", @user, class:'back btn btn-danger mt-2 me-2' %></div>
    <div class="user">
        <div class="user-image">
            <%= image_tag @user.photo %>
        </div>
        <div class="user-info">
            <h1><%= @user.name %></h1>
            <h3>Number of posts: <%= @user.posts_counter %></h3>
        </div>
    </div>
    <div class="posts">
        <% @posts.each do |post| %>
        <%= link_to "/users/#{@user.id}/posts/#{post.id}" do %>
        <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.text %></p>
            <div>
                <p>Comments: <%= post.comments_counter %></p>
                <p>Likes: <%= post.likes_counter %></p>
            </div>
        </div>
        <% if post.comments.length > 0 %>
        <div class="comments">
            <% post.recent_comments.each do |comment| %>
                <div class="comment">
                    <p><%= comment.user.name %>: <%= comment.text %></p>
                </div>
            <% end %>
        </div>
        <% end %>
        <% end %>
        <% end %>
    </div>
</div>
